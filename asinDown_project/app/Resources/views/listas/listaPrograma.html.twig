{# Plantillla de nuestra aplicacion #}
{% extends 'base.html.twig' %}
{# TITULO #}
{% block title %}
Lista Programa
{% endblock %}
{# CONTENIDO #}
{% block body %}



<div class="container espacios listar">
<h1>Lista de programas</h1>

  <div class="panel-group mt-5  mb-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" href="#collapse3">Asignatura</a>
        </h4>
      </div>
      <div id="collapse3" class="panel-collapse collapse">
        <div class="panel-body"><table>
        <tr class="title">
        <th>ID</th>
        <th>Aula</th>
        <th>Nombre Asignatura</th>
        <th>Usuario</th>
        <th>Programa</th>
        <th>Duración</th>
        </tr>

          {% for asig in asignatura_todo %}
          <tr class="cont">
            <td>{{ asig.id }}</td>
            <td>{{ asig.aulas }}</td>
            <td>{{ asig.nombre }}</td>
            <td>{{ asig.usuario|join(',') }}</td>
            <td>{{ asig.programas|join(',') }}</td>
            <td>{{ asig.duracion }}</td>
            <td><a href="{{path('updateAsign',{'id':asig.id})}}" id="link">Actualizar</a>
            <td><a href="{{path('deleteAsign',{'id':asig.id})}}" id="link">Borrar</a></td>
        </tr>
        </tr>
          </tr>
          {% endfor %}
          <a href="../nuevaAsignatura">registrar</a>

        </table>
        </div>
      </div>
    </div>
  </div>

  <div class="panel-group mb-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" href="#collapse1">Aula</a>
        </h4>
      </div>
      <div id="collapse1" class="panel-collapse collapse">
        <div class="panel-body"><table>
        <tr class="title">
            <th>ID</th>
            <th>Número de Aula</th>
            <th>Asignatura</th>
        </tr>
          {% for au in aula_todo %}

          <tr class="cont">
              <td>{{ au.id }}</td>
              <td>{{ au.numAula }}</td>
              <td>{{ au.asignaturas|join(',') }}</td>
              <td><a href="{{path('updateAula',{'id':au.id})}}" id="link">Actualizar</a>
              <td><a href="{{path('deleteAula',{'id':au.id})}}" id="link">Borrar</a></td>
          </tr>
          {% endfor %}
          <a href="../nuevaAula">registrar Aula</a>
        </table></div>
      </div>
    </div>
  </div>

  <div class="panel-group mb-5">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" href="#collapse2">Programas</a>
        </h4>
      </div>
      <div id="collapse2" class="panel-collapse collapse">
        <div class="panel-body"><table>
        <tr class="title">
            <th>ID</th>
            <th>Nombre Programa</th>
            <th>Nombre Usuario</th>
            <th>Asignaturas</th>
            <th>Duración</th>
            <th>Dirección</th>
            <th>Horario</th>
            <th>Tipo de Usuarios</th>
          </tr>
        </tr>
          {% for prog in programa_todo %}
          <tr class="cont">
          <td>{{ prog.id }}</td>
          <td>{{ prog.nombre }}</td>
          <td>{{ prog.usuario|join(',') }}</td>
          <td>{{ prog.asignaturas|join(',') }}</td>
          <td>{{ prog.duracion }}</td>
          <td>{{ prog.direccion }}</td>
          <td>{{ prog.horario }}</td>
          <td>{{ prog.usuario|join(',') }}</td>

              <td><a href="{{path('updatePrograma',{'id':prog.id})}}" id="link">Actualizar</a>
              <td><a href="{{path('deletePrograma',{'id':prog.id})}}" id="link">Borrar</a></td>
          </tr>
          {% endfor %}
          <a href="../nuevoPrograma">Registrar Programa</a>
        </table></div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
